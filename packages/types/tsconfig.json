{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["es2017"],
    "moduleResolution": "node",
    "types": [
      "node",
      "express"
    ],
    "noImplicitAny": true,
    "isolatedModules": true,
    "noEmit": false
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}